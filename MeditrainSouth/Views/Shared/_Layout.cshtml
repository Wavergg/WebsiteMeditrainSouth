<!DOCTYPE html>

<html>
<head>

    <title>@ViewBag.Title</title>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/materialize/css/materialize.css" media="screen,projection" />
    <link rel="stylesheet" href="~/lib/StyleSheet.css" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>

    <header>
        <nav class="mainBackgroundColor" role="navigation">
            <div class="row">
                <a asp-controller="Home" asp-action="index" id="logo-container" class="brand-logo">
                    <img src="~/lib/images/meditrainLogo.png" height="48" alt="MediTrain Logo" />
                </a>
                <ul class="right hide-on-med-and-down">
                    <li>
                        <a asp-controller="Home" asp-action="index" class="waves-effect waves-light btn btn-flat white-text">Home</a>
                    </li>
                    <li>
                        <a href="#" data-target="dropdown-courses" class="waves-effect waves-light btn btn-flat white-text dropdown-trigger"><i class="material-icons right">arrow_drop_down</i>Courses</a>
                        <ul id='dropdown-courses' class='dropdown-content'>
                            <li><a asp-controller="WorkplaceFirstAid" asp-action="Index">Comprehensive Workplace First Aid</a></li>
                            <li><a asp-controller="RecertificationCourse" asp-action="Index">Recertification Courses</a></li>
                            <li><a asp-controller="ChildcareFirstAid" asp-action="Index">Childcare First Aid</a></li>
                            <li><a asp-controller="BasicFirstAid" asp-action="Index">Basic First Aid</a></li>
                            <li><a asp-controller="BasicLifeSupport" asp-action="Index">Basic Life Support (CPR)</a></li>

                            <li><a asp-controller="FirstAidForYoungChildren" asp-action="Index">First Aid for Young Children</a></li>
                            <li><a asp-controller="MeditrainForSchool" asp-action="Index">Meditrain for Schools</a></li>
                            <li><a asp-controller="PreHospitalEmergencyCare" asp-action="Index">Pre-Hospital Emergency Care</a></li>
                            <li><a asp-controller="AdvancedCourseForDentalProfessional" asp-action="Index">Advanced Life Support Course for Dental Professionals</a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="#" data-target="dropdown-firstAid" class="waves-effect waves-light btn btn-flat white-text dropdown-trigger"><i class="material-icons right">arrow_drop_down</i>First Aid</a>
                        <ul id='dropdown-firstAid' class=' dropdown-content' style="border:none">
                            <li><a class="text-indigo text-darken-3" asp-controller="FirstAidTraining" asp-action="Index">First Aid Training</a></li>
                            <li><a class="text-indigo text-darken-3" asp-controller="UsefulLinks" asp-action="Index">Useful Links</a></li>
                            <li><a class="text-indigo text-darken-3" asp-controller="WorksafeGuidance" asp-action="Index">Worksafe Guidance</a></li>
                        </ul>
                    </li>
                    <li><a asp-controller="AboutUs" asp-action="Index" class="waves-effect waves-light btn btn-flat white-text">About Us</a></li>
                    <li><a asp-controller="Contact" asp-action="Index" class="waves-effect waves-light btn btn-flat white-text">Contact Us</a></li>
                </ul>

                @*Navigation Sidebar for mobile *@
                <ul id="nav-mobile" class="sidenav collection">
                    <li class="collection-header mainBackgroundColor center" style="padding-top:15px"><a href="#"><img src="~/lib/images/meditrainLogo.png" height="48" alt="MediTrain Logo" /></a><br /></li>
                    <li class="collection-item"><a asp-controller="Home" asp-action="index">Home</a></li>
                    <li class="collection-item">
                        <ul class="collapsible">
                            <li>
                                <div class="collapsible-header">
                                    <a href="#" class=" black-text"><i class="material-icons right">arrow_drop_down</i>Courses</a>
                                </div>
                                <div class="collapsible-body black-text">
                                    <ul>
                                        <li><a asp-controller="WorkplaceFirstAid" asp-action="Index" class="truncate" style="padding:0">Comprehensive Workplace First Aid</a></li>
                                        <li><a asp-controller="RecertificationCourse" asp-action="Index" class="truncate" style="padding:0">Recertification Courses</a></li>
                                        <li><a asp-controller="ChildcareFirstAid" asp-action="Index" style="padding:0">Childcare First Aid</a></li>
                                        <li><a asp-controller="BasicFirstAid" asp-action="Index" class="truncate" style="padding:0">Basic First Aid</a></li>
                                        <li><a asp-controller="BasicLifeSupport" asp-action="Index" class="truncate" style="padding:0">Basic Life Support (CPR)</a></li>

                                        <li><a asp-controller="FirstAidForYoungChildren" asp-action="Index" class="truncate" style="padding:0">First Aid for Young Children</a></li>
                                        <li><a asp-controller="MeditrainForSchool" asp-action="Index" class="truncate" style="padding:0">Meditrain for Schools</a></li>
                                        <li><a asp-controller="PreHospitalEmergencyCare" asp-action="Index" class="truncate" style="padding:0">Pre-Hospital Emergency Care</a></li>
                                        <li><a asp-controller="AdvancedCourseForDentalProfessional" asp-action="Index" class="truncate" style="padding:0">Advanced Life Support Course for Dental Professionals</a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <li class="collection-item">
                        <ul class="collapsible">
                            <li>
                                <div class="collapsible-header">
                                    <a class=" black-text"><i class="material-icons right">arrow_drop_down</i>First Aid</a>
                                </div>
                                <div class="collapsible-body black-text">
                                    <ul>
                                        <li><a asp-controller="FirstAidTraining" asp-action="Index" class="truncate" style="padding:0">First Aid Training</a></li>
                                        <li><a asp-controller="UsefulLinks" asp-action="Index" class="truncate" style="padding:0">Useful Links</a></li>
                                        <li><a asp-controller="WorksafeGuidance" asp-action="Index" class="truncate" style="padding:0">Worksafe Guidance</a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <li class="collection-item"><a asp-controller="AboutUs" asp-action="Index">About Us</a></li>
                    <li class="collection-item"><a asp-controller="Contact" asp-action="Index">Contact Us</a></li>
                </ul>
                <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            </div>
        </nav>
    </header>
    <main>

        @RenderBody()
    </main>
    <footer class="page-footer mainBackgroundColor">
        <div class="">
            <div class="row valign-wrapper">
                <div class="col l9 offset-l1">
                    <div class="col l3 s12">
                        <h5 class="white-text no-padding">First Aid</h5>
                        <ul>
                            <li><a class="white-text" asp-controller="FirstAidTraining" asp-action="Index">First Aid Training</a></li>
                            <li><a class="white-text" asp-controller="WorksafeGuidance" asp-action="Index">Worksafe Guidelines</a></li>
                        </ul>
                    </div>
                    <div class="col l3 s12">
                        <h5 class="white-text">Information</h5>
                        <ul>
                            <li><a class="white-text" asp-controller="AboutUs" asp-action="Index">About Meditrain</a></li>
                            <li><a class="white-text" asp-controller="Home" asp-action="Index">Home</a></li>
                            @*<li><a class="white-text" href="#!">Terms and Conditions</a></li>*@
                        </ul>
                    </div>
                    <div class="col l3 s12">
                        <h5 class="white-text">Contact</h5>
                        <ul>
                            <li><a class="white-text" asp-controller="Contact" asp-action="Index">Get In Touch</a></li>
                            <li style="text-decoration:none;"><h5 style="font-size:1.5rem">Margaret Laughton</h5></li>
                            <li><a class="white-text" href="tel:+64277477695">Ph 027 747 7695</a></li>
                            <li><a class="white-text" href="mailto:m.meditrain@gmail.com">m.meditrain@gmail.com</a></li>
                            <li><a class="white-text" target="_blank" href="https://goo.gl/maps/8tFzUpFM719hpXv29">622 Clutha Valley Road RD 4 Balclutha  9274</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col l3 s12 hide-on-small-only" style="padding:0px;">
                    <a asp-controller="Home" asp-action="Index"><img class="center-align" src="~/lib/images/meditrainLogo.png" height="48" /></a>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="col l3 margin-left-1">
                &copy; 2020 Meditrain South. All rights reserved.
            </div>
        </div>
    </footer>
    <!--JavaScript at end of body for optimized loading-->
    <script src="~/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/materialize/js/materialize.js"></script>
    <script type="text/javascript" src="~/resources/js/Navigation.js"></script>
    <script src="~/resources/js/Init.js"></script>
    <script src="~/resources/js/Carousel.js"></script>
    <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
</body>
</html>
